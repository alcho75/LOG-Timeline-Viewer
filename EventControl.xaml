<UserControl x:Class="CLTL.EventControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:CLTL"
			 mc:Ignorable="d"
			 d:Background="AliceBlue"
			 d:DataContext="{d:DesignInstance Type=local:TLEvent}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="100"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Polyline x:Name="poly" Grid.Row="1" Points="20,1 1,1 1,10 6,19" Stroke="Red" StrokeThickness="2"/>
		<Label
			Name="description"
			Grid.Row="1"
			Width="1000"
			Content="{Binding Description}"
			FontSize="12"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Left"
			VerticalContentAlignment="Center"
			Padding="0"
			Margin="0,20,0,0"
			d:Content="ABC">
			<Label.Style>
				<Style TargetType="Label"> 
					<Style.Triggers>
						<DataTrigger Binding="{Binding SearchMatch}" Value="true">
							<Setter Property="FontWeight" Value="UltraBlack"/>
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</Label.Style>
			<Label.LayoutTransform>
				<RotateTransform Angle="60"/>
			</Label.LayoutTransform>
		</Label>
		<Label
			Grid.Row="0"
			Width="100"
			Content="{Binding ms}"
			FontSize="11"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			HorizontalContentAlignment="Left"
			VerticalContentAlignment="Center"
			Padding="0"
			Margin="-8,-3,0,0"
			d:Content="1H">
			<Label.Style>
				<Style TargetType="Label">
					<Style.Triggers>
						<DataTrigger Binding="{Binding SearchMatch}" Value="true">
							<Setter Property="FontWeight" Value="UltraBlack"/>
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</Label.Style>
			<Label.LayoutTransform>
				<RotateTransform Angle="-90"/>
			</Label.LayoutTransform>
		</Label>
		<Label
			Grid.Row="0"
			Width="100"
			Content="{Binding Interval}"
			FontSize="9"
			Foreground="Red"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			HorizontalContentAlignment="Left"
			VerticalContentAlignment="Center"
			Padding="0"
			Margin="4,-3,0,0"
			d:Content="1H">
			<Label.Style>
				<Style TargetType="Label">
					<Style.Triggers>
						<DataTrigger Binding="{Binding SearchMatch}" Value="true">
							<Setter Property="FontWeight" Value="UltraBlack"/>
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</Label.Style>
			<Label.LayoutTransform>
				<RotateTransform Angle="-90"/>
			</Label.LayoutTransform>
		</Label>
	</Grid>
</UserControl>
