<Window x:Class="CLTL.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:CLTL"
		mc:Ignorable="d"
		Title="LOG Timeline Viewer" Height="450" Width="1400"
		DataContext="{Binding Mode=OneWay, RelativeSource={RelativeSource Self}}"
		Loaded="Window_Loaded">
	<Grid Margin="30">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="50"/>
		</Grid.RowDefinitions>
		
		<ItemsControl Grid.Row="0" ItemsSource="{Binding TLEvents}" >
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<local:OverlappingCanvasPanel LeftOffset="20" TopOffset="0"/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate DataType="local:TLEvent">
					<local:EventControl/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
		<Slider Name="slider" Grid.Row="1" VerticalAlignment="Center" ValueChanged="Slider_ValueChanged" Maximum="1" LargeChange="0.1" SmallChange="0.01"/>
	</Grid>
</Window>
